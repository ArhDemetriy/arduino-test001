{
  "version": "2.0.0",
  "tasks": [
    {
      "type": "cppbuild",
      "label": "Собрать проект синхронизации с FFT",
      "command": "C:/Development/utils/w64devkit/bin/g++.exe",
      "args": [
        "-fdiagnostics-color=always",
        "-g",
        "${workspaceFolder}\\src\\main.cpp",
        "-I${workspaceFolder}\\..\\common",
        "-I${workspaceFolder}\\lib\\miniaudio",
        "-I${workspaceFolder}\\lib\\kissfft",
        "${workspaceFolder}\\lib\\kissfft\\kiss_fft.c",
        "${workspaceFolder}\\lib\\kissfft\\kiss_fftr.c",
        "-o",
        "${workspaceFolder}\\build\\app.exe",
        "-lole32",
        "-lwinmm"
      ],
      "options": {
        "cwd": "${workspaceFolder}",
        "env": {
          "PATH": "C:/Development/utils/w64devkit/bin;${env:PATH}"
        }
      },
      "problemMatcher": ["$gcc"],
      "group": {
        "kind": "build",
        "isDefault": true
      },
      "detail": "Сборка main.cpp вместе с исходниками kissfft"
    }
  ]
}
